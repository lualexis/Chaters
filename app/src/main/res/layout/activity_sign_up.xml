<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:background="@color/colorPrimaryDark"
            android:fillViewport="true"
            tools:context=".activities.login.LoginActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true">


        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edit_text_height"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:hint="@string/login_email"
                android:textSize="@dimen/login_text_size"
                android:id="@+id/editTextEmail"
                android:layout_marginTop="150dp"
                android:paddingLeft="@dimen/login_edit_text_space"
                android:paddingTop="@dimen/login_edit_text_space"
                android:background="@drawable/edittext_rounded"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edit_text_height"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="@string/login_password"
                android:textSize="@dimen/login_text_size"
                android:id="@+id/editTextPassword"
                android:paddingLeft="@dimen/login_edit_text_space"
                android:paddingTop="@dimen/login_edit_text_space"
                android:background="@drawable/edittext_rounded"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextEmail"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edit_text_height"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="@string/login_confirm_password"
                android:textSize="@dimen/login_text_size"
                android:id="@+id/editTextConfirmPassword"
                android:paddingLeft="@dimen/login_edit_text_space"
                android:paddingTop="@dimen/login_edit_text_space"
                android:background="@drawable/edittext_rounded"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextPassword"/>

        <Button
                android:text="@string/login_sign_up"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/login_text_xl_size"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_button_xl_height"
                android:id="@+id/buttonSignUp"
                android:background="@drawable/button_ripple_bg"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextConfirmPassword"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"/>


        <Button
                android:id="@+id/buttonBack"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_button_xl_height"
                android:text="@string/login_go_login"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/login_text_size"
                android:background="@drawable/button_ripple"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>